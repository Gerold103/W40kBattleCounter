<Window x:Class="Wh40k.WindowCloseCombatMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Melee" Height="400" Width="600" WindowStyle="None" MouseDown="Window_MouseDown" BorderThickness="2" Visibility="Visible" AllowsTransparency="True" Background="#FF7A7A7A">
    <Grid OpacityMask="Black">
        <Grid.Background>
            <ImageBrush ImageSource="CloseCombatBackground.jpg"/>
        </Grid.Background>
        <Label Content=" A" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="41,152,0,0" Background="#FF4B4B4B" Width="30" Height="25" FontFamily="Microsoft Sans Serif" FontSize="13" Foreground="White"/>
        <Label Content=" S" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="41,192,0,0" Background="#FF4B4B4B" Width="30" Height="25" FontFamily="Microsoft Sans Serif" FontSize="13" Foreground="White"/>
        <Label Content="WS" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="41,232,0,0" Background="#FF4B4B4B" Width="30" Height="25" FontFamily="Microsoft Sans Serif" FontSize="13" Foreground="White"/>
        <Label Content="AP" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="41,272,0,0" Background="#FF4B4B4B" Width="30" Height="25" FontFamily="Microsoft Sans Serif" FontSize="13" Foreground="White"/>
        <TextBox x:Name="textboxA" Height="20" Margin="76,157,0,0" TextWrapping="Wrap" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="textboxS" HorizontalAlignment="Left" Height="20" Margin="76,197,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="50"/>
        <TextBox x:Name="textboxWS" HorizontalAlignment="Left" Height="20" Margin="76,237,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="50"/>
        <TextBox x:Name="textboxAP" HorizontalAlignment="Left" Height="20" Margin="76,277,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="50"/>
        <Button x:Name="BPlayCombat" Content="Сыграть бой" HorizontalAlignment="Left" Margin="225,249,0,0" VerticalAlignment="Top" Width="140" Height="40" IsDefault="True"/>
        <Button x:Name="Exit" Content="RUN, VERMIN" HorizontalAlignment="Left" Margin="225,309,0,0" VerticalAlignment="Top" Width="140" Height="40" Click="Exit_Click"/>
        <Label x:Name="save" Content="VAL" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="451,161,0,0"/>
        <Label x:Name="uSave" Content="VAL" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="451,201,0,0"/>
        <Label Content="WS" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="451,241,0,0"/>
        <Label x:Name="armor" Content="T" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="461,281,0,0"/>
        <TextBox x:Name="SaveBox" Height="20" Margin="486,161,0,0" TextWrapping="Wrap" Text="TextBox" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top" IsEnabled="False"/>
        <TextBox x:Name="UnblockSaveBox" Height="20" Margin="486,201,0,0" TextWrapping="Wrap" Text="TextBox" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top" IsEnabled="False"/>
        <TextBox x:Name="WS1" Height="20" Margin="486,241,0,0" TextWrapping="Wrap" Text="TextBox" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="T" Height="20" Margin="486,281,0,0" TextWrapping="Wrap" Text="TextBox" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <CheckBox x:Name="Save" Content="Спасбросок За броню" HorizontalAlignment="Left" Margin="397,145,0,0" VerticalAlignment="Top" Checked="Save_Checked" Unchecked="Save_Unchecked"/>
        <CheckBox x:Name="UnblockSave" Content="Непробиваемый Спасбросок" HorizontalAlignment="Left" Margin="397,181,0,0" VerticalAlignment="Top" Checked="UnblockSave_Checked" Unchecked="UnblockSave_Unchecked"/>
        <CheckBox x:Name="isInfantry" Content="Цель - пехота?" HorizontalAlignment="Left" Margin="397,312,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <CheckBox x:Name="openVeh" Content="Техника открыта?" HorizontalAlignment="Left" Margin="397,333,0,0" VerticalAlignment="Top" IsEnabled="False"/>
        <Image HorizontalAlignment="Left" Margin="430,6,0,0" VerticalAlignment="Top" Width="100" Height="130" Source="Shield.png"/>
        <Image HorizontalAlignment="Left" Margin="41,10,0,0" VerticalAlignment="Top" Width="158" Height="119" Source="Sword.png"/>

    </Grid>
</Window>
