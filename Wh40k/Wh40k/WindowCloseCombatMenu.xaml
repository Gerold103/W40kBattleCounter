<Window x:Class="Wh40k.WindowCloseCombatMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Melee" Height="400" Width="600" WindowStyle="None" MouseDown="Window_MouseDown" BorderThickness="2" Visibility="Visible" AllowsTransparency="True" Background="#FF7A7A7A">
    <Grid Margin="1,0,-1,0">
        <Grid.OpacityMask>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.OpacityMask>
        <Grid.Background>
            <ImageBrush Stretch="UniformToFill" ImageSource="CloseCombatBackground2.jpg"/>
        </Grid.Background>
        <Label Content="A" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,152,0,0" Background="#FF4B4B4B" Width="30" Height="25" FontFamily="Microsoft Sans Serif" FontSize="13" Foreground="White" HorizontalContentAlignment="Center"/>
        <Label Content="S" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,192,0,0" Background="#FF4B4B4B" Width="30" Height="25" FontFamily="Microsoft Sans Serif" FontSize="13" Foreground="White" HorizontalContentAlignment="Center"/>
        <Label Content="WS" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,232,0,0" Background="#FF4B4B4B" Width="30" Height="25" FontFamily="Microsoft Sans Serif" FontSize="13" Foreground="White" HorizontalContentAlignment="Center"/>
        <Label Content="AP" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,272,0,0" Background="#FF4B4B4B" Width="30" Height="25" FontFamily="Microsoft Sans Serif" FontSize="13" Foreground="White" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="textboxA" Height="25" Margin="40,152,0,0" TextWrapping="NoWrap" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="13" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="textboxS" HorizontalAlignment="Left" Height="25" Margin="40,192,0,0" TextWrapping="NoWrap"  VerticalAlignment="Top" Width="50" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="textboxWS" HorizontalAlignment="Left" Height="25" Margin="40,232,0,0" TextWrapping="NoWrap"  VerticalAlignment="Top" Width="50" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="textboxAP" HorizontalAlignment="Left" Height="25" Margin="40,272,0,0" TextWrapping="NoWrap"  VerticalAlignment="Top" Width="50" HorizontalContentAlignment="Center"/>
        <Button x:Name="BPlayCombat" Content="Сыграть бой" Margin="225,257,0,0" Width="140" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top" BorderBrush="{x:Null}" Foreground="#FF484848" FontFamily="Microsoft Sans Serif" Panel.ZIndex="-2" BorderThickness="0" IsDefault="True">
            <Button.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFA5B68E" Offset="0"/>
                    <GradientStop Color="#FFFCFFF9" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="Exit" Content="Закрыть окно" HorizontalAlignment="Left" Margin="225,309,0,0" VerticalAlignment="Top" Width="140" Height="40" BorderBrush="{x:Null}" Foreground="#FF484848" FontFamily="Microsoft Sans Serif" Panel.ZIndex="-2" BorderThickness="0" Click="Exit_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFA5B68E" Offset="0"/>
                    <GradientStop Color="#FFFCFFF9" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Label x:Name="save" Content="VAL" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="451,161,0,0"/>
        <Label x:Name="uSave" Content="VAL" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="451,201,0,0"/>
        <Label Content="WS" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="451,241,0,0"/>
        <Label x:Name="armor" Content="T" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="461,281,0,0"/>
        <TextBox x:Name="SaveBox" Height="20" Margin="486,161,0,0" TextWrapping="Wrap" Text="TextBox" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top" IsEnabled="False"/>
        <TextBox x:Name="UnblockSaveBox" Height="20" Margin="486,201,0,0" TextWrapping="Wrap" Text="TextBox" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top" IsEnabled="False"/>
        <TextBox x:Name="WS1" Height="20" Margin="486,241,0,0" TextWrapping="Wrap" Text="TextBox" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="T" Height="20" Margin="486,281,0,0" TextWrapping="Wrap" Text="TextBox" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <CheckBox x:Name="Save" Content="Спасбросок За броню" HorizontalAlignment="Left" Margin="397,145,0,0" VerticalAlignment="Top" Checked="Save_Checked" Unchecked="Save_Unchecked"/>
        <CheckBox x:Name="UnblockSave" Content="Непробиваемый Спасбросок" HorizontalAlignment="Left" Margin="397,181,0,0" VerticalAlignment="Top" Checked="UnblockSave_Checked" Unchecked="UnblockSave_Unchecked"/>
        <CheckBox x:Name="isInfantry" Content="Цель - пехота?" HorizontalAlignment="Left" Margin="397,312,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <CheckBox x:Name="openVeh" Content="Техника открыта?" HorizontalAlignment="Left" Margin="397,333,0,0" VerticalAlignment="Top" IsEnabled="False"/>
        <Image HorizontalAlignment="Left" Margin="486,6,0,0" VerticalAlignment="Top" Width="100" Height="130" Source="Shield.png"/>
        <Image HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="158" Height="119" Source="Sword.png"/>

    </Grid>
</Window>
