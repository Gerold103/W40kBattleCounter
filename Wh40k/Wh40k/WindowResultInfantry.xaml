<Window x:Class="Wh40k.WindowResultInfantry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WindowResultInfantry" Height="496" Width="302" BorderThickness="2" Visibility="Visible" BorderBrush="Black" AllowsTransparency="True"
        WindowStyle="None" MouseDown="Window_MouseDown">
    <ScrollViewer MouseDown="Window_MouseDown" Margin="0,0,0,-4" ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Visible">
        <Grid Name="MainGrid" MouseDown="Window_MouseDown">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                    <GradientStop Color="#FF898989" Offset="0.263"/>
                </LinearGradientBrush>
            </Grid.Background>
            <!-- Buttons -->
            <Button Name="ButtonClose" Content="Закрыть окно" HorizontalAlignment="Center" Margin="70,471,71,0" VerticalAlignment="Top" Width="140" Height="40" Click="ButtonClose_Click"/>

            <!-- Footer with name of program -->
            <Label Name="Footer" Content="Battle Counter 2.0" HorizontalAlignment="Left" Margin="58,511,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Arial" FontWeight="Bold" ClipToBounds="True" IsHitTestVisible="True">
                <Label.Effect>
                    <DropShadowEffect BlurRadius="3" Color="#FF4F4F4F" ShadowDepth="3"/>
                </Label.Effect>
                <Label.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <LinearGradientBrush.RelativeTransform>
                            <TransformGroup>
                                <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                <SkewTransform CenterY="0.5" CenterX="0.5"/>
                                <RotateTransform Angle="10" CenterY="0.5" CenterX="0.5"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </LinearGradientBrush.RelativeTransform>
                        <GradientStop Color="Gainsboro"/>
                        <GradientStop Color="White" Offset="1"/>
                        <GradientStop Color="#FFECECEC" Offset="0.523"/>
                    </LinearGradientBrush>
                </Label.Foreground>
            </Label>
            <!-- Images -->
            <Image Name="ImageBattleResult" HorizontalAlignment="Left" Height="152" VerticalAlignment="Top" Width="281" Source="Lose.png" Stretch="Fill"/>
            <GroupBox Name="GroupHits" Header="GroupHits" HorizontalAlignment="Left" Margin="0,152,0,0" VerticalAlignment="Top" Width="281" MinHeight="100"/>
            <GroupBox Name="GroupWounds" Header="GroupWounds" HorizontalAlignment="Left" Margin="0,252,0,0" VerticalAlignment="Top" Width="281" MinHeight="100"/>
            <GroupBox Name="GroupSaves" Header="GroupSaves" HorizontalAlignment="Left" Margin="0,352,0,0" VerticalAlignment="Top" Width="281" MinHeight="100"/>
        </Grid>
    </ScrollViewer>
</Window>
